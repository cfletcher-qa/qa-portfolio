	"item": [
		{
			"name": "Pets",
			"item": [
				{
					"name": "Create Pet",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.expect(pm.response.code).to.eql(200, 'Expected response status 200 but got ' + pm.response.code + '\\nResponse body:\\n' + pm.response.text());",
									"});",
									"",
									"var ct = pm.response.headers.get('Content-Type') || pm.response.headers.get('content-type') || '';",
									"if (ct.indexOf('application/json') !== -1) {",
									"    pm.test(\"Response contains pet ID\", function () {",
									"        var jsonData = pm.response.json();",
									"        pm.expect(jsonData.id).to.eql(12345);",
									"    });",
									"",
									"    pm.test(\"Pet name is correct\", function () {",
									"        var jsonData = pm.response.json();",
									"        pm.expect(jsonData.name).to.eql(\"Fluffy\");",
									"    });",
									"} else {",
									"    pm.test(\"Response is JSON\", function () {",
									"        pm.expect.fail(\"Expected JSON response but got: \" + pm.response.text());",
									"    });",
									"}",
									"",
									"// Save the petId to environment variable",
									"var jsonData = pm.response.json();",
									"pm.environment.set(\"petId\", jsonData.id);",
									""
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"id\": 12345,\n  \"name\": \"Fluffy\",\n  \"category\": {\n    \"id\": 1,\n    \"name\": \"Dogs\"\n  },\n  \"status\": \"available\"\n}\n",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/pet",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"pet"
							],
							"query": [
								{
									"key": "",
									"value": null,
									"disabled": true
								}
							]
						}
					},
					"response": []
				},
				{
